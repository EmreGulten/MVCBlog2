@model IEnumerable<BlogMvcApp.Models.BlogModel>

@{
    if (Model.Count() == 0)
    {
        <div class="alert alert-warning">
            <h3>Kayıt Bulunamadı</h3>
        </div>
    }
    else
    {

        foreach (var item in Model)
        {
            <div class="blog">
                <h3 class="page-header">@item.Baslik</h3>
                <p>
                    <span class="glyphicon glyphicon-time">@item.EklemeTarihi</span>
                </p>
                <hr />
                <img class="img-responsive" src="http://placehold.it/900x300" alt="" />
                <hr />
                <p>
                    @item.Aciklama
                </p>
                @Html.ActionLink("Daha Fazlası...", "Details", "Blog", new { id = @item.ID }, new { @class = "btn btn-primary" })

            </div>
        }

    }
}
